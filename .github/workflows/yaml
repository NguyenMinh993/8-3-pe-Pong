name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main  # Thay bằng nhánh chính của bạn (main hoặc master)

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Setup Node.js (nếu dùng công cụ build như npm)
        uses: actions/setup-node@v3
        with:
          node-version: '16'

      - name: Build (nếu cần)
        run: |
          npm install    # Nếu có file package.json
          npm run build  # Nếu dùng công cụ build như Vite, React, v.v.

      - name: Deploy
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./  # Thư mục chứa index.html (hoặc thư mục build)